<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.OBDFuel" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="android:forceDarkAllowed" tools:targetApi="q"> false </item>
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white_prurple</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <item name="android:itemTextAppearance">@style/menuItem</item>

        <!-- Customize your theme here. -->
    </style>

    <style name="MyCustomTabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="fontFamily">@font/nunito</item>
        <item name="android:fontFamily">@font/nunito</item>
        <item name="textAllCaps">true</item>
        <item name="android:letterSpacing">0.1</item>
    </style>

    <style name="VehicleNameErrorApperance" parent="TextAppearance.Design.Tab">
        <item name="fontFamily">@font/nunito_bold</item>
        <item name="android:fontFamily">@font/nunito</item>
        <item name="color">@color/error</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:letterSpacing">0.05</item>
        <item name="android:textSize">10sp</item>
    </style>

    <style name="menuItem" parent="Widget.AppCompat.TextView.SpinnerItem">
        <item name="android:textColor">@color/black_purple</item>
        <item name="fontFamily">@font/nunito</item>
        <item name="android:fontFamily">@font/nunito</item>
        <item name="android:letterSpacing">0.02</item>
    </style>



</resources>